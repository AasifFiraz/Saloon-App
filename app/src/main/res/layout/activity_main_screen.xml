<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main_Screen"
    android:background="#2c2c2c">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:orientation="vertical"
        android:background="#F7BF50">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_marginTop="350dp"
                android:src="@drawable/main_screen_wave" />

        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterCustomer"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="200dp"
        android:fontFamily="@font/rubikbold"
        android:padding="12dp"
        android:text="Register New customer"
        android:textColor="@color/yellowish"
        android:textSize="18dp"
        android:backgroundTint="#2c2c2c"
        app:cornerRadius="25dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnRegisterAdmin"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_below="@id/btnRegisterCustomer"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="250dp"
        android:backgroundTint="@color/yellowish"
        android:fontFamily="@font/rubikbold"
        android:padding="12dp"
        android:text="Register New admin"
        android:textColor="#000000"
        android:textSize="18dp"
        app:cornerRadius="25dp" />

</RelativeLayout>