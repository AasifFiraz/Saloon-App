<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAppointments">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7BF50" />

    <TextView
        android:id="@+id/AllAppointmentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:drawableStart="@drawable/ic_appoinment_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="All Appointments"
        android:textColor="#2c2c2c"
        android:textSize="20sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnMakeAppoinmentAdmin"
        android:layout_width="290dp"
        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/AllAppointmentsText"
        android:layout_marginTop="20dp"
        android:backgroundTint="@color/white"
        android:drawableEnd="@drawable/ic_arrow_right"
        android:fontFamily="@font/robotoblack"
        android:text="Make an Appoinment"
        android:textColor="@color/black"
        android:textSize="16sp"
        app:cornerRadius="25dp" />

    <TextView
        android:id="@+id/txtAllCustomersAppointmentText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnMakeAppoinmentAdmin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/rubikmedium"
        android:text="Customer's Appointments"
        android:textColor="#2c2c2c"
        android:textSize="20sp" />

    <View
        android:layout_width="258dp"
        android:layout_height="1dp"
        android:layout_below="@+id/txtAllCustomersAppointmentText"
        android:layout_marginLeft="20dp"
        android:background="#2c2c2c" />


    <ListView
        android:id="@+id/lstAllAppointments"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="13dp"
        android:layout_below="@id/txtAllCustomersAppointmentText"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/txtNoAppointmentMessageAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txtAllCustomersAppointmentText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinsbold"
        android:text="No Appointments Currently"
        android:textColor="#2c2c2c"
        android:textSize="20sp" />

</RelativeLayout>