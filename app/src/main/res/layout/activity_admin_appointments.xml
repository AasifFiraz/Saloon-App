<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminAppointments">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#F7BF50" />

    <TextView
        android:id="@+id/AppointmentsText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:drawableStart="@drawable/ic_appoinment_icon"
        android:drawablePadding="10dp"
        android:fontFamily="@font/poppinsbold"
        android:text="All Appointments"
        android:textColor="#2c2c2c"
        android:textSize="20sp" />

    <ListView
        android:id="@+id/lstAllAppointments"
        android:layout_marginTop="10dp"
        android:layout_below="@id/AppointmentsText"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/txtNoAppointmentMessageAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/AppointmentsText"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:fontFamily="@font/poppinsbold"
        android:text="No Appointments Currently"
        android:textColor="#2c2c2c"
        android:textSize="20sp" />

</RelativeLayout>