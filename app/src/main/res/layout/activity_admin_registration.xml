<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/RlRegisterAdmin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2c2c2c"
    tools:context=".Admin_Registration">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:background="#F7BF50">

            <ImageView
                android:id="@+id/Logo"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:src="@drawable/logo" />

            <ImageView
                android:layout_width="450dp"
                android:layout_height="100dp"
                android:layout_marginTop="180dp"
                android:src="@drawable/ic_wave_admin" />

        </FrameLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/txtAdmintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp"
        android:fontFamily="@font/poppinsbold"
        android:text="Admin Registration"
        android:textColor="#000000"
        android:textSize="30sp" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtRegisterAdminFullName"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtAdmintext"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:hint="Full Name"
        app:boxCornerRadiusBottomEnd="10pt"
        app:boxCornerRadiusBottomStart="10pt"
        app:boxCornerRadiusTopEnd="10pt"
        app:boxCornerRadiusTopStart="10pt"
        app:startIconDrawable="@drawable/ic_account">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtRegisterAdminFullName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtRegAdminEmail"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegisterAdminFullName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:hint="Email"
        app:boxCornerRadiusBottomEnd="10pt"
        app:boxCornerRadiusBottomStart="10pt"
        app:boxCornerRadiusTopEnd="10pt"
        app:boxCornerRadiusTopStart="10pt"
        app:startIconDrawable="@drawable/ic_email">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtRegAdminEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtRegAdminPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegAdminEmail"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        android:hint="Password"
        app:boxCornerRadiusBottomEnd="10pt"
        app:boxCornerRadiusBottomStart="10pt"
        app:boxCornerRadiusTopEnd="10pt"
        app:boxCornerRadiusTopStart="10pt"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:counterTextColor="@color/white"
        app:endIconMode="password_toggle"
        app:endIconTint="#FF9E01"
        app:errorIconDrawable="@null"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtRegAdminPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/txtRegAdminConfPassword"
        style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox"
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegAdminPassword"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:hint="Confirm Password"
        app:boxCornerRadiusBottomEnd="10pt"
        app:boxCornerRadiusBottomStart="10pt"
        app:boxCornerRadiusTopEnd="10pt"
        app:boxCornerRadiusTopStart="10pt"
        app:counterEnabled="true"
        app:counterMaxLength="10"
        app:counterTextColor="@color/white"
        app:endIconMode="password_toggle"
        app:endIconTint="#FF9E01"
        app:errorIconDrawable="@null"
        app:startIconDrawable="@drawable/ic_password">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/EdtRegAdminConfPass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:maxLength="10" />

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/no_account_msg3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegAdminConfPassword"
        android:layout_marginLeft="50dp"
        android:fontFamily="@font/rubikmedium"
        android:text="Already Have An Admin Account?"
        android:textColor="@color/white"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/txtAdminLogintext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtRegAdminConfPassword"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@+id/no_account_msg3"
        android:fontFamily="@font/rubikmedium"
        android:text="@string/Login"
        android:textColor="#FFA701"
        android:textSize="16dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAdminRegister"
        android:layout_width="250dp"
        android:layout_height="60dp"
        android:layout_below="@+id/txtRegAdminConfPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:backgroundTint="#F7BF50"
        android:fontFamily="@font/poppinsbold"
        android:padding="12dp"
        android:text="Register"
        android:textColor="#000000"
        android:textSize="18dp"
        app:cornerRadius="25dp" />
</RelativeLayout>